################# i3 gaps next                     

# Settings for I3 next gap git
# https://github.com/Airblader/i3/tree/gaps-next
# delete or uncomment the following lines if you do not have it or do not
# want it

for_window [class="^.*"] border pixel 2
gaps inner 9
gaps outer 9
#smart_gaps on
#smart_borders on

################# i3 gaps change                   

set $mode_gaps Gaps: (o) outer, (i) inner
set $mode_gaps_outer Outer Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_inner Inner Gaps: +|-|0 (local), Shift + +|-|0 (global)
bindsym $mod+Shift+g mode "$mode_gaps"

mode "$mode_gaps" {
        bindsym o      mode "$mode_gaps_outer"
        bindsym i      mode "$mode_gaps_inner"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

mode "$mode_gaps_inner" {
        bindsym plus  gaps inner current plus 5
        bindsym minus gaps inner current minus 5
        bindsym 0     gaps inner current set 0

        bindsym Shift+plus  gaps inner all plus 5
        bindsym Shift+minus gaps inner all minus 5
        bindsym Shift+0     gaps inner all set 0

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
mode "$mode_gaps_outer" {
        bindsym plus  gaps outer current plus 5
        bindsym minus gaps outer current minus 5
        bindsym 0     gaps outer current set 0

        bindsym Shift+plus  gaps outer all plus 5
        bindsym Shift+minus gaps outer all minus 5
        bindsym Shift+0     gaps outer all set 0

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

################# picom of i3wm                  

# if you want transparency on non-focused windows, ...
exec_always --no-startup-id picom --config ~/.config/i3/picom.conf

bindsym control+mod1+o exec --no-startup-id ~/.config/i3/scripts/picom-toggle.sh

################# bar appearance                   

bar {
    height 25
    workspace_buttons yes
	font pango:Hack Nerd Font Mono 12
	position top

	# system icons
    # tray_output none
    # tray_output $firstMonitor
    # tray_output $secondMonitor

	# status_command i3status
    status_command i3status -c ~/.config/i3/i3status.conf

# Burnt-Orange-ish color variables
  set $burnt_bg        #2B2118
  set $burnt_border    #544237  
  set $burnt_text      #F5E6CA  
  set $burnt_focus_bg  #D95F0E  
  set $burnt_status    #F0A202  
  set $burnt_inactive  #663A00 
  set $burnt_urgent    #D62828

  colors {
    background $burnt_bg
    statusline $burnt_status
    separator  $burnt_inactive

    # colorclass            border         backgr.        text
    focused_workspace       $burnt_border  $burnt_focus_bg  $burnt_text
    active_workspace        $burnt_border  $burnt_focus_bg  $burnt_text
    inactive_workspace      $burnt_border  $burnt_inactive  $burnt_text
    urgent_workspace        $burnt_border  $burnt_urgent    $burnt_text
  }
}


    ##STOP THEMING BAR

    ##START THEMING WM
##START THEMING WM
#Theme name : Burnt Orange

# Burnt-Orange-ish color variables
set $burnt_bg        #2B2118  
set $burnt_border    #544237 
set $burnt_text      #F5E6CA
set $burnt_focus_bg  #D95F0E
set $burnt_urgent    #D62828
set $burnt_status    #F0A202
set $burnt_inactive  #663A00

# Window color settings
# class                   border          backgr.         text            indicator
client.focused            $burnt_focus_bg $burnt_focus_bg $burnt_text     $burnt_focus_bg
client.unfocused          $burnt_border   $burnt_border   $burnt_text     $burnt_border
client.focused_inactive   $burnt_border   $burnt_border   $burnt_text     $burnt_border
client.placeholder        $burnt_border   $burnt_border   $burnt_text     $burnt_border
client.urgent             $burnt_urgent   $burnt_urgent   $burnt_text     $burnt_urgent

client.background         $burnt_bg

##STOP THEMING WM
